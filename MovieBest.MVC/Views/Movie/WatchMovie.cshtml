@model Movie

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Planet</title>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/font-awesome.min.css" rel="stylesheet">
	<link href="/css/global.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
	<script src="/js/bootstrap.bundle.min.js"></script>
</head>

<body>

	<section id="center" class="center_o pt-2 pb-2">
		<div class="container-xl">
			<div class="row center_o1">
				<div class="col-md-5">
					<div class="center_o1l">
						<h3 class="mb-0">Enjoy Watching</h3>
					</div>
				</div>
			</div>
		</div>
	</section>
	

	<section id="price" class="pt-4 pb-4 bg_grey">
		<div class="container-xl">
			<div class="row work_1 mt-5">

				<div class="col-md-6">
					<img style="width:350px; height:500px" src="@Model.ImageUrl"/>
				</div>


				<div class="col-md-6">
					<div class="work_1r">
						<h1 class="col_red mb-4">@Model.Title</h1>
						<h2>
						<span style="color:darkgoldenrod">
							<i class="fa fa-star"></i>
							<i>@Model.Rating</i>
                            </span>
                        </h2>
						<div class="play2rir">
							<h3 class="fw-normal"> @Model.Description <span class="pull-right"></span></h3>
							<br />
							<h5 class="fw-normal mt-4"><span style="font-size:20px; color:#de1002">Movie Duration:</span> @Model.Duration <span class="pull-right"></span></h5>
							<h5 class="fw-normal mt-4"><span style="font-size:20px; color:#de1002">Movie Language:</span> @Model.MovieLanguage <span class="pull-right"></span></h5>
							<h5 class="fw-normal mt-4"><span style="font-size:20px; color:#de1002">Movie Genre:</span> @Model.Genre.Name <span class="pull-right"></span></h5>
							<h5 class="fw-normal mt-4"><span style="font-size:20px; color:#de1002">Movie Release Date:</span> @Model.ReleaseDate <span class="pull-right"></span></h5>
							
						</div>
					</div>
                </div>
				<br />
                <br />
				@if (Model.VideoUrl != null)
				{
					if (Model.VideoUrl.EndsWith(".mp4"))
					{
						<video style="width:1300px; height:600px" controls>
							<source src="@Model.VideoUrl" type="video/mp4">
							Your browser does not support the video tag.
						</video>
					}
					else if (Model.VideoUrl.Contains("youtube.com") || Model.VideoUrl.Contains("youtu.be"))
					{
						<div style="margin-top:50px; margin-bottom:50px">
							<iframe style="width:1300px; height:600px" src="https://www.youtube.com/embed/@Model.VideoUrl.Split('=')[1]" frameborder="0" allowfullscreen></iframe>
						</div>
					}
					else
					{
						<div style="margin-top:50px; margin-bottom:50px">
							<iframe style="width:1300px; height:600px" src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
						</div>
					}
				}
				else
				{
					<p>No Video Uploaded Yet...</p>
				}

			</div>
			
		</div>
    </section>
</body>

				</html>