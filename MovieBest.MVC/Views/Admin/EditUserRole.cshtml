@model UserRolesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Planet</title>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/font-awesome.min.css" rel="stylesheet">
	<link href="/css/global.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
	<script src="/js/bootstrap.bundle.min.js"></script>

</head>

<body>

	<section id="center" class="center_o pt-2 pb-2">
		<div class="container-xl">
			<div class="row center_o1">
				<div class="col-md-5">
					<div class="center_o1l">
						<h3 class="mb-0">Change User Roles</h3>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="contact" class="pt-4 pb-4 bg_grey">
		<div class="container-xl">
			<div class="col-md-9">


				<form asp-action="EditUserRole" asp-controller="Admin" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<input type="hidden" asp-for="UserID"/>
					<div class="contact_2l1 mt-3 row">
						<div class="col-md-6">
							<div class="contact_2l1i">
								<input class="form-control" style="background-color:#27292d" readonly value="@Model.UserName" asp-for="UserName">
							</div>
						</div>
					</div>


					<div class="contact_2l1 mt-3 row">
						<div class="col-md-6">
							<div class="contact_2l1i">
								@foreach(var role in Model.AvailableRoles)
								{
                                    <div>
										<input type="checkbox" 
											name="SelectedRoles"
											value="@role"
										@if (Model.SelectedRoles.Contains(role)){ <text>Checked</text> }/>

										<label>@role</label>
									</div>
								}
						</div>
						</div>
					</div>

					<br />
					<button type="submit" class="btn btn-success" style="width:40%"> <b>Save</b> </button>


				</form>
				<br />
				<a asp-action="Users" asp-controller="Admin" class="btn btn-light" style="width:40%;"><b>Back To List</b> <i class="bi bi-plus"></i></a>

			</div>
		</div>
	</section>
</body>
</html>