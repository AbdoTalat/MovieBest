@model ChangePasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Planet</title>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/font-awesome.min.css" rel="stylesheet">
	<link href="/css/global.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
	<script src="/js/bootstrap.bundle.min.js"></script>

</head>

<body>

	<section id="center" class="center_o pt-2 pb-2">
		<div class="container-xl">
			<div class="row center_o1">
				<div class="col-md-5">
					<div class="center_o1l">
						<h3 class="mb-0">Change your Password</h3>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="contact" class="pt-4 pb-4 bg_grey">
		<div class="container-xl">
			<div class="col-md-9">
				<form asp-action="ChangePassword" asp-controller="Profile" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="contact_2l1 mt-3 row">
						<div class="col-md-6">
							<label asp-for="OldPassword"></label>
							<div class="contact_2l1i">
                                <input id="password" class="form-control" asp-for="OldPassword">
								<span asp-validation-for="OldPassword" class="text-danger"></span>
                                @* <div class="input-group-append">
                                    <span id="togglePassword" class="input-group-text" style="cursor: pointer;">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </span>
                                </div> *@
							</div>
						</div>
					</div>
					<div class="contact_2l1 mt-3 row">
						<div class="col-md-6">
							<label asp-for="NewPassword"></label>
							<div class="contact_2l1i">
								<input class="form-control" asp-for="NewPassword">
								<span asp-validation-for="NewPassword" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="contact_2l1 mt-3 row">
						<div class="col-md-6">
							<label asp-for="ConfirmNewPassword"></label>
							<div class="contact_2l1i">
								<input class="form-control"  asp-for="ConfirmNewPassword">
								<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
							</div>
						</div>
					</div>

					<br />
					<button type="submit" class="btn btn-success" style="width:45%"> <b>Save</b> </button>


				</form>
				<br />
				<a asp-action="Index" asp-controller="Profile" class="btn btn-info" style="width:45%;"><b>Back To Profile</b></a>
			</div>

		</div>
	</section>
